@page
@model TPPro.Pages.Produits.IndexModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="votre-fichier-css.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="container mt-5">
        <h1>Liste des Produits</h1>

        <p>
            <a class="btn btn-primary" asp-page="Create">Créer un Nouveau Produit</a>
        </p>

        <form method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Rechercher...">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
        </form>

        <div class="row">
            @foreach (var item in Model.Produit)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@item.ImagePath" alt="@item.ProduitName" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@item.ProduitName</h5>
                            <p class="card-text">Prix: @item.Prix $</p>
                            <p class="card-text">Quantité: @item.Quantite</p>
                            <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.ProduitID">Détails</a>
                            <a class="btn btn-info" asp-page="./Edit" asp-route-id="@item.ProduitID">Modifier</a>
                            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ProduitID">Supprimer</a>
                            <form method="post" asp-page-handler="AddToCart" asp-route-productId="@item.ProduitID">
                                <button type="submit" class="btn btn-primary">
                                    Ajouter au panier
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>
