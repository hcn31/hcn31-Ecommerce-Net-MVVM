@page
@model TPPro.Pages.Produits.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Produit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produit.ProduitID" />
            <div class="form-group">
                <label asp-for="Produit.Prix" class="control-label"></label>
                <input asp-for="Produit.Prix" class="form-control" />
                <span asp-validation-for="Produit.Prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.ProduitName" class="control-label"></label>
                <input asp-for="Produit.ProduitName" class="form-control" />
                <span asp-validation-for="Produit.ProduitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.Quantite" class="control-label"></label>
                <input asp-for="Produit.Quantite" class="form-control" />
                <span asp-validation-for="Produit.Quantite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.CategorieID" class="control-label"></label>
                <select asp-for="Produit.CategorieID" class="form-control" asp-items="ViewBag.CategorieID"></select>
                <span asp-validation-for="Produit.CategorieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.ImagePath" class="control-label"></label>
                <input asp-for="Produit.ImagePath" class="form-control" />
                <span asp-validation-for="Produit.ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
